
<div class="container">
  <div class="form">
    <h1 class="title-blue">Sign up</h1>
    <br>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">

        <%= f.input :first_name,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "firstname" },
                    :label => false,
                    placeholder: "First name",
                    :input_html => { :class => 'form-inputs'}
                    %>
        <%= f.input :last_name,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "lastname" },
                    :label => false,
                    placeholder: "Last name",
                    :input_html => { :class => 'form-inputs'}%>
      <%= f.input :email,
                    required: true,
                    input_html: { autocomplete: "email" },
                    :label => false,
                    placeholder: "Email",
                    :input_html => { :class => 'form-inputs'}%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" },
                    :label => false,
                    placeholder: "Password",
                    :input_html => { :class => 'form-inputs'}%>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" },
                    :label => false,
                    placeholder: "Confirm password",
                    :input_html => { :class => 'form-inputs'} %>
      </div>

      <div class="form-actions d-flex justify-content-center">
        <%= f.button :submit, "Sign up", class: "btn-blue-sml" %>
      </div>
    <% end %>

    <%= render "devise/shared/links", class: "link-to" %>
</div>
</div>
