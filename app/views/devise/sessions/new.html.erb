<div class="container">
  <div class="form">
    <h1 class="title-blue">Log in</h1>
    <br>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    :label => false,
                    placeholder: "Email",
                    :input_html => { :class => 'form-inputs'} %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    :label => false,
                    placeholder: "Password",
                    :input_html => { :class => 'form-inputs'} %>
        <%= f.input :remember_me, :input_html => { :class => 'form-inputs'}, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <div class="d-flex justify-content-center">
          <%= f.button :submit, "Log in", class: "btn-blue-sml"  %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links", class: "link-to" %>
    </div>
  </div>
</div>
