
<%# title to welcome the admin with their name %>
<div class="profile-top">
  <h1 class="title-white">Hello <%= current_user.first_name %> </h1>
    <%# <%= image_tag "https://kitt.lewagon.com/placeholder/users/sarahlafer", class: "avatar-bordered my-3", alt: "avatar-bordered" %>

      <div >
        <%= link_to "Create a profile", new_recipient_path %>
      </div>
    <%= form_with url: recipients_path, method: :get, class: "search d-flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "search-box",
        placeholder: "Search for profiles" %>
      <%= submit_tag "🔍", class: "search-mag" %>
    <% end %>
  </div>


<div class="container">
  <div class="cards">

 <% if @user.donations.present? %>
    <% @donations.each do |donation| %>
      <p>
        <%= link_to "Show recipient", recipient_path(donation.recipient_id)  %>
      </p>
    <% end %>
  <% end %>


<% if @user.admin? %>

  <%= link_to 'new recipient', new_recipient_path  %>

  <% @recipients.each do |recipient| %>
    <p>
    <br>
      <div class="card">
        <div class="card-body">
          <%= link_to recipient.name, recipient_path(recipient)  %>
        </div>
      </div>
    </p>
  <% end %>
<% end %>
