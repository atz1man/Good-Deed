<%# This is /recipients/new %>
<%# I dont want input name / bio and qr code I want this to go inside as a placeholder %>
<div class="container">
    <div class="form">
      <h1 class="title-blue">Create a profile</h1>
      <br>
          <%= simple_form_for @recipient do |f| %>
          <div class="form-input">
            <%= f.input :name, :label => false, placeholder: "Name", :input_html => { :class => 'form-inputs'}%>
              <%= f.input :bio, :label => false, placeholder: "Share their story", :input_html => { :class => 'form-inputs'}  %>
              <%= f.input :photo, :label => false, placeholder: "Upload a photo", :input_html => { :class => 'form-inputs'} %>
            </div>
           <div class="form-actions">
           <div class="d-flex justify-content-center">
           <%# want this to go to recipient_path but it takes me to recipients.id instead of /id %>
      <%= f.button :submit, "Complete", class: "btn-blue-sml"  %>
    </div>
    <% end %>
  </div>
