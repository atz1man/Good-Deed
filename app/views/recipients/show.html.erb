<div class="profile-top">

  <%=image_tag "https://res.cloudinary.com/dl9jjyyew/image/upload/v1662643947/GoodDeedWhite_ufm7vi.png", style: 'height:auto;width:50%;', class: "logo-profile" %>

  <h1 class="title-white">
  <%= @recipient.name %>
  </h1>

  <%# admin you can edit and delete%>
  <div class="admin-prof">
    <% if admin?  %>
    <%= link_to 'âœï¸', edit_recipient_path%>
    <%= link_to 'ðŸš®', recipient_path(@recipient), data: { "turbo-method": :delete, "turbo-confirm": "are you sure?"} %>
  <% end  %>
  </div>
  <%# not admin you can donate %>
  <div class="user-prof">
    <% if !admin?  %>
      <%= render "new_donation", donation: @donation %>
    <% end %>
  </div>
</div>

<%# if the recipient has a photo show their picture %>
  <% if @recipient.photo.key.present?%>
    <%= cl_image_tag @recipient.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
  <%# if the user isnt an admin show their bio %>
  <% if !admin? %>
  <p><%= @recipient.bio %></p>
  <% end %>

  <% str = cl_image_path "qr_code#{@recipient.id}.png" %>
  <% newPath = str.sub /\/v\d*\/development/, '' %>
  <img src="<%= newPath %>" alt="qr-code">

</div>



