<div class="profile-top">

  <%# <%=image_tag "https://res.cloudinary.com/dl9jjyyew/image/upload/v1662643947/GoodDeedWhite_ufm7vi.png", style: 'height:auto;width:30%;', class: "logo-profile" %>

  <h1 class="title-white">
  <%= @recipient.name %>
  </h1>

  <%# admin you can edit and delete%>
  <div class="admin-prof">
    <% if admin?  %>
    <%= link_to '✏️', edit_recipient_path%>
    <%= link_to '🚮', recipient_path(@recipient), data: { "turbo-method": :delete, "turbo-confirm": "are you sure?"} %>
  <% end  %>
  </div>

<%# if the recipient has a photo show their picture %>
  <% if @recipient.photo.key.present?%>
    <%= cl_image_tag @recipient.photo.key, height: 300, width: 400, crop: :fill, class: "prof-img" %>
  <% end %>

  <p class ="p-blue-bigger"><%= @recipient.bio %></p>

<%# QR code that has been created %>
  <div class="m-0">
    <% str = cl_image_path "qr_code#{@recipient.id}.png" %>
    <% newPath = str.sub /\/v\d*\/development/, '' %>
        <%# <% newPath = str.sub /\/v\d*\/production/, '' %>
    <img src="<%= newPath %>" alt="qr-code" class="prof-qr">
  </div>
</div>

<% if !admin? %>
  <div class="d-flex flex-column">
    <div class="m-auto">
      <%# show a link to my donations so i can see them all %>
      <label for="donate" class="btn-orange-lrg">Donate</label>
      <input type="file" name="photo" id="donate">
    </div>
    <div class="m-auto">
      <%= link_to "About Good Deed", root_path, class: "btn-blue-sml" %>
    </div>
  </div>
<% end %>



