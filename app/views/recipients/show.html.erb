<div class="profile-top">

 <%=image_tag "https://res.cloudinary.com/dl9jjyyew/image/upload/v1662643947/GoodDeedWhite_ufm7vi.png", style: 'height:auto;width:90%;', class: "logo-title" %>

  <h1 class="title-white"><%= @recipient.name %></h1>

  <% if admin?  %>
    <%= link_to 'edit', edit_recipient_path %>
    <%= link_to 'remove', recipient_path(@recipient), data: { "turbo-method": :delete, "turbo-confirm": "are you sure?"} %>
  <% end  %>

  <% if !admin?  %>
    <%= render "new_donation", donation: @donation %>
  <% end %>

  <% if @recipient.photo.key.present?%>
    <%= cl_image_tag @recipient.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>

  <p><%= @recipient.name %></p>
  <p><%= @recipient.bio %></p>

  <% str = cl_image_path "qr_code#{@recipient.id}.png" %>
  <% newPath = str.sub /\/v\d*\/development/, '' %>
  <img src="<%= newPath %>" alt="qr-code">

</div>
