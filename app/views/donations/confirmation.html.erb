<p class= "bold-text"> Please confirm that you want to pay Â£<%= @donation.amount %> to <%= @recipient.name %></p>

<div class= "btn-centre">
  <button id="pay" class="btn-blue-lrg">Confirm Payment</button>
</div>
 <script src="https://js.stripe.com/v3/"></script>
  <script>
    const paymentButton = document.getElementById('pay');
    console.log(paymentButton)
    paymentButton.addEventListener('click', () => {
      const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
      stripe.redirectToCheckout({
        sessionId: '<%= @donation.checkout_session_id %>'
      });
    });
  </script>

<div class="d-flex justify-content-center">
  <%= link_to "My Donations", recipients_path, class: "btn-blue-lrg"%>
</div>
